<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/textview_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/comment_user"
            style="@style/comment_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/glyphicons_user"
            android:drawablePadding="@dimen/text_icon_padding"
            android:inputType="none"
            android:layout_marginRight="@dimen/edit_text_margin"
            android:text="" />

        <TextView
            android:id="@+id/comment_time_ago"
            style="@style/mapitem_text_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/glyphicons_clock_grey"
            android:drawablePadding="@dimen/text_icon_padding"
            android:inputType="none"
            android:text="" />
    </LinearLayout>

    <TextView
        android:id="@+id/comment_content"
        style="@style/mapitem_text_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:text="" />

</LinearLayout>